<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_game_mickey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/LinearLayout_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:background="@drawable/mickeyline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
    	android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/LinearLayout_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
          
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_player1_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageView_player1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

      

        <LinearLayout
            android:id="@+id/LinearLayout_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/LinearLayout_player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
          
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_player3_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageView_player3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>